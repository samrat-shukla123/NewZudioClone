@model NewZudio.Models.Login.UserMaster
@{
    Layout = null;
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/assets/css/Style.css" rel="stylesheet" />
        <title>MyApp | Login</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

        <!-- Your main style.css (already contains all other pages + the login rules above) -->
        <link rel="stylesheet" href="~/style.css">
    </head>
    <body class="login-page-body">
        @if (TempData.ContainsKey("msg"))
        {
            <div class="alert alert-danger">
                @TempData["msg"]
            </div>
        }
        <div class="login-page-card">
            <div class="text-center mb-4">
                <i class="fas fa-lock fa-3x login-page-brand mb-2"></i>
                <h1 class="h3 mb-3 font-weight-bold login-page-brand">MyApp Login</h1>

            </div>

            <form action="dashboard.html" method="GET">
                <div class="form-group mb-3">
                    <label for="username" class="font-weight-medium">Username</label>
                    <div class="input-group login-page-input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        @Html.TextBoxFor(m => m.UserID, new { @class = "form-control login-page-input", placeholder = "Enter username or email", type = "text", required = "required" })
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label for="password" class="font-weight-medium">Password</label>
                    <div class="input-group login-page-input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control login-page-input", @placeholder = "Password", type = "password", required = "required" })

                    </div>
                </div>

                <div class="d-grid mb-4">
                    <button type="submit" class="btn btn-login-theme btn-lg btn-block">
                        <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                    </button>
                </div>

                <div class="text-center">
                    <a href="#" class="text-muted text-decoration-none small">Forgot Password?</a>
                </div>
            </form>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
    </body>
</html>
}
